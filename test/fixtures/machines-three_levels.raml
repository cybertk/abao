#%RAML 0.8

title: Machines API
baseUri: http://example.api.com/{version}
version: v1

/machines:
  get:
    description: Gets a list of existing machines
    responses:
      200:
        body:
          application/json:
            schema: |
              [
                type: 'string'
                name: 'string'
              ]
  /{machine_id}:
    uriParameters:
      machine_id:
        description: |
          The ID of the Machine
        type: string
        example: '1'
    delete:
      description: Delete a machine by `machine_id`
      responses:
        204:
    /parts:
      get:
        description: Gets a list of machine `machine_id`'s parts
        responses:
          200:
            body:
              application/json:
                schema: |
                  type: 'string'
                  name: 'string'

