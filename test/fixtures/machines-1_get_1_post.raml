#%RAML 0.8

title: Machines API
baseUri: http://example.api.com/{version}
version: v1

/machines:
  get:
    description: Get a list of existing machines
    responses:
      200:
        body:
          application/json:
            schema: |
              [
                type: 'string'
                name: 'string'
              ]
            example: |
              { "type": "Kulu", "name": "Mike" }
  post:
    description: Creates a new machine
    body:
      application/json:
        schema: |
          type: 'string'
          name: 'string'
        example: |
              { "type": "Kulu", "name": "Mike" }
    responses:
      201:
        headers:
          location: 
            description: URI of the newly created machine
            example: /machines/{id}
        body:
          application/json:
            schema: |
              type: 'string'
              name: 'string'
            example: |
              { "type": "Kulu", "name": "Mike" }

