#%RAML 0.8

title: Address Book API
baseUri: http://example.api.com/{version}
version: v1

/contacts:
  post:
    description: Creates a new contact
    body:
      application/json:
        schema: |
          type: 'string'
          name: 'string'
        example: |
              { "type": "Kulu", "name": "Mike" }
    responses:
      201:
        headers:
          location:
            description: URI of the newly created contact
            example: /contacts/{contact_id}
        body:
          application/json:
            schema: |
              type: 'string'
              name: 'string'
            example: |
              { "type": "Kulu", "name": "Mike" }
  /contacts/{contact_id}
    delete:
      description: Deletes an existing contact by `contact_id`
      responses:
        204:
    put:
      description: Replaces an existing contact by `contact_id`
      body:
        application/json:
          schema: |
            type: 'string'
            name: 'string'
          example: |
                { "type": "Kulu", "name": "Mike" }
      responses:
        201:
          body:
            application/json:
              schema: |
                type: 'string'
                name: 'string'
              example: |
                { "type": "Kulu", "name": "Mike" }
    get:
      description: Gets an existing contact by `contact_id`
      responses:
        200:
          body:
            application/json:
              schema: |
                [
                  type: 'string'
                  name: 'string'
                  phone: 'string'
                ]
              example: |
                {
                  "type": "contact",
                  "name": "Jenny",
                  "phone": "867-5309"
                }

