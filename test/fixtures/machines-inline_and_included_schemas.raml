#%RAML 0.8

title: Machines API
baseUri: http://example.api.com/{version}
version: v1

schemas:
  - type1: !include schemas/type1.json
  - type2: !include schemas/type2.json

/machines:
  get:
    description: Gets a list of existing machines
    responses:
      200:
        body:
          application/json:
            schema: |
              {
                "type": "object",
                "$schema": "http://json-schema.org/draft-03/schema",
                "properties": {
                  "type": {"$ref": "type2"},
                  "name": "string"
                }
              }

